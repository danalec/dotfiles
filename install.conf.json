[
    {
        "clean": ["~"]
    },
    {
        "link": {
            "~/.dotfiles": "",
            "~/bin": "bin/",
            "~/.config": "config/",
            "~/.vimrc": "vimrc",
            "~/.gvimrc": "gvimrc",
            "~/.vim": "vim/",
            "~/.zshrc": "zshrc",
            "~/.zsh": "zsh/",
            "~/.gitconfig": "gitconfig",
            "~/.gitignore_global": "gitignore_global"
        }
    },
    {
        "shell": [
	    ["curl https://sublime.wbond.net/Package%20Control.sublime-package -o config/sublime-text-3/Installed\\ Packages/Package\\ Control.sublime-package", "Installing Package Control"],
            ["git submodule update --init --recursive --remote", "Installing submodules"]
        ]
    }
]


